{
  "compilerOptions": {
    "watch": true,
    "noEmitOnError": false,
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "pretty": true,
    "sourceMap": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx",
    "*.d.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
